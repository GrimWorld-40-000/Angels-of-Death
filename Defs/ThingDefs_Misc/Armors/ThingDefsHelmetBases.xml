<?xml version="1.0" encoding="utf-8"?>
<Defs>
            <!--Generic helmet base. Every helmet will have these things. Only add/change stuff in this if you want every helmet to be affected-->
    <ThingDef Abstract="true" Name="HP_AoD_HelmetBase" ParentName="ArmorHelmetMakeableBase">
		<techLevel>Spacer</techLevel>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1.6</drawSize>
		</graphicData>
		<uiIconScale>1</uiIconScale>
		<recipeMaker>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>HP_ImperialFabricationBench</li>
			</recipeUsers>
		</recipeMaker>
        <tradeTags>
            <li>HPHelmet</li>
        </tradeTags>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
    </ThingDef>

            <!--Specific helmet categories. All helmet should inherit from one of these. To make a new helmet type, copy one of the others, then adjust everything to whatever the new helmet type should have.-->

        <!--MKVII-->
    <ThingDef Abstract="true" Name="HP_AoD_MKVIIHelmet_Base" ParentName="HP_AoD_HelmetBase">
		<description>Special hermetic helmet with improved optics, target scanning system and life support. Primaris Marine version. Worn by most of Firstborn battle brothers.</description>
		<equippedStatOffsets>
			<AimingDelayFactor>-0.3</AimingDelayFactor>
		</equippedStatOffsets>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>100</Plasteel>
			<Steel>50</Steel>
			<Uranium>15</Uranium>
			<HP_Ceramite>10</HP_Ceramite>
		</costList>
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>1.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.10</ArmorRating_Blunt>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Insulation_Cold>20</Insulation_Cold>
			<Insulation_Heat>20</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<recipeMaker>
			<researchPrerequisites>
                <li>MKVIIAquillaArmors</li>
			</researchPrerequisites>
		</recipeMaker>
		<apparel>
			<tags>
				<li>40kDeathKorps</li>
				<li>40kDeathKorpsHelmet</li>
			</tags>
		</apparel>
    </ThingDef>

