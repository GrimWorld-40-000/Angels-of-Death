<?xml version="1.0" encoding="utf-8"?>
<Defs>
            <!--Generic armor base. Every armor will have these things. Only add/change stuff in this if you want every armor to be affected-->
    <ThingDef Abstract="true" Name="GW_SM_ArmorBase" ParentName="ArmorMachineableBase">
        <techLevel>Spacer</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>HP_ImperialFabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1</drawSize>
		</graphicData>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
        <tradeTags>
            <li>HPArmor</li>
        </tradeTags>
		<apparel>
			<tags>
				<li>EVA</li>
			</tags>
			<useWornGraphicMask>true</useWornGraphicMask>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li MayRequire="ceteam.combatextended">Hands</li>
				<li MayRequire="ceteam.combatextended">Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	    <modExtensions>
            <li Class="CombatExtended.PartialArmorExt" MayRequire="ceteam.combatextended">
                <stats>		  				  
                    <li>
                        <ArmorRating_Sharp>0.8</ArmorRating_Sharp>
                        <parts>
                            <li>Hand</li>
                        </parts>
                    </li>
                    <li>
                        <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
                        <parts>
                            <li>Hand</li>
                        </parts>
                    </li>
                </stats>
            </li>
	    </modExtensions>
    </ThingDef>


		<!--Terminator-->
	<ThingDef ParentName="GW_SM_ArmorBase" MayRequire="Grimworld.Framework">
        <defName>GW_SM_IndomitusTerminator</defName>
		<label>Terminator Power Armor</label>
        <description>Terminator armor is massive power armor.</description>
		<graphicData>
			<texPath>Things/Apparel/Armor_IndomitusTerminator/Indomitus_torso_Male_south</texPath>
		</graphicData>
		<researchPrerequisites>
			<li>GW_SM_AstartesSuperHeavy</li>
		</researchPrerequisites>
        <statBases>
			<WorkToMake>110000</WorkToMake>
			<MaxHitPoints>1500</MaxHitPoints>
			<Mass>15</Mass>
			<Flammability>0.1</Flammability>
			<ArmorRating_Sharp>2.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.7</ArmorRating_Blunt>
			<ArmorRating_Heat>1.5</ArmorRating_Heat>
			<Insulation_Cold>50</Insulation_Cold>
			<Insulation_Heat>50</Insulation_Heat>
			<EquipDelay>7</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.1</MoveSpeed>
		</equippedStatOffsets>
		<costList>
			<ComponentSpacer>13</ComponentSpacer>
			<Plasteel>800</Plasteel>
			<Steel>500</Steel>
			<Uranium>150</Uranium>
			<HP_Ceramite>150</HP_Ceramite>
		</costList>
		<apparel>
            <wornGraphicPath>Things/Apparel/Armor_IndomitusTerminator/Indomitus_torso_Male</wornGraphicPath>
			<tags>
				<li>PrestigeCombatGear</li>
                <li>GW_Terminator</li>
			</tags>
		</apparel>
        <comps>
            <li Class="GW4KArmor.CompProperties_TriColorMask">
                <maskCount>4</maskCount>
                <palettePresets>GW_SM_TorsoChapterPalettes</palettePresets>
                <defaultPalette>
                    <colorA>(250, 176, 67)</colorA>
					<colorB>(250, 176, 67)</colorB>
					<colorC>(180, 65, 74)</colorC>
                </defaultPalette>
            </li>
        </comps>
		<modExtensions>
            <li Class="VFECore.ApparelDrawPosExtension">
                <apparelDrawSettings>
                    <drawPosNorthOffset>(0, 0.2, 0)</drawPosNorthOffset>
                    <drawPosSouthOffset>(0, 0, 0)</drawPosSouthOffset>
                    <drawPosWestOffset>(0.1, 0.01, 0)</drawPosWestOffset>
                    <drawPosEastOffset>(-0.1, 0.01, 0)</drawPosEastOffset>
                </apparelDrawSettings>
                <isUnifiedApparel>true</isUnifiedApparel>
				<hideHead>false</hideHead>
            </li>
		</modExtensions>
    </ThingDef>

</Defs>