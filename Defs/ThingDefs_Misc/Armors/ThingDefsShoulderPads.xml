            <li Class="GW4KArmor.CompProperties_TriColorMask">
                <maskCount>4</maskCount>
                <palettePresets>GW_SM_ShoulderChapterPalettes</palettePresets>
                <defaultPalette>
                    <colorA>(250, 250, 250)</colorA>
                    <colorB>(250, 250, 250)</colorB>
                    <colorC>(250, 250, 250)</colorC>
                </defaultPalette>
            </li>
        </comps>-->
		<modExtensions>
            <li Class="VFECore.ApparelDrawPosExtension">
                <apparelDrawSettings>
                    <drawPosNorthOffset>(0, 0.3, 0)</drawPosNorthOffset>
                    <drawPosSouthOffset>(0, 0, 0)</drawPosSouthOffset>
                    <drawPosWestOffset>(-0.1, 0.1, 0)</drawPosWestOffset>
                    <drawPosEastOffset>(0.1, 0.1, 0)</drawPosEastOffset>
                </apparelDrawSettings>
                <isUnifiedApparel>true</isUnifiedApparel>
				<hideHead>false</hideHead>
            </li>
		</modExtensions>
    </ThingDef>
</Defs>
