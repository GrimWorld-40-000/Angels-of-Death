	<!--===== Grenade =====-->

	<ThingDef ParentName="GW_SM_LauncherBase">
		<defName>GW_SM_Gun_GravCannon</defName>
		<label>Graviton Cannon</label>
		<description>The air feels kinda heavy.</description>
		<graphicData>
			<texPath>Things/Weapons/Grav/GravCannon</texPath>
			<drawSize>1.4</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>HP_ImperialFabricationBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>52000</WorkToMake>
			<Mass>16</Mass>
			<AccuracyTouch>0.82</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.76</AccuracyMedium>
			<AccuracyLong>0.62</AccuracyLong>
			<RangedWeapon_Cooldown>6</RangedWeapon_Cooldown>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.40</MoveSpeed>
		</equippedStatOffsets>
		<costList>
			<Steel>550</Steel>
			<Plasteel>175</Plasteel>
			<ComponentIndustrial>40</ComponentIndustrial>
			<HP_Ceramite>15</HP_Ceramite>
		</costList>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>GW_SM_GravCannon_Bullet</defaultProjectile>
				<forcedMissRadius>2.9</forcedMissRadius>
				<warmupTime>3</warmupTime>
				<range>35</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>HP_Plasma_Gun_Sound</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2.5</cooldownTime>
			</li>
		</tools>
	</ThingDef>

