                    <offset>(0.25, 0.0, 0.0)</offset>
                </dataEast>
                <scale>1.0</scale>
                <childScale>1.0</childScale>
            </drawData>
            <wornGraphicPath>Things/Apparel/ArmorUpgrade_Shields/Storm shields/StormShield1</wornGraphicPath>
