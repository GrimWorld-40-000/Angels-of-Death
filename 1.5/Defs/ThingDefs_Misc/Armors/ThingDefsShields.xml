            <MeleeCritChance MayRequire="CETeam.CombatExtended">-0.2</MeleeCritChance>
            <MeleeParryChance MayRequire="CETeam.CombatExtended">1.0</MeleeParryChance>
        </equippedStatOffsets>
        <apparel>
            <drawData>
				<defaultData>
					<layer>76</layer> <!--70-77 is over helmet and under gun-->
