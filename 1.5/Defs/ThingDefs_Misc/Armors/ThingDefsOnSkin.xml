            <ArmorRating_Sharp>0.24</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.12</ArmorRating_Blunt>
			<ArmorRating_Heat>0.16</ArmorRating_Heat>
			<Insulation_Cold>6</Insulation_Cold>
			<Insulation_Heat>8</Insulation_Heat>
        </statBases>
        <apparel>
            <wornGraphicPath>Things/OnSkin/FibroLayer/FibroLayer</wornGraphicPath>
            <tags>
                <li>GW_SM_FibroVest</li>
            </tags>
        </apparel>
    </ThingDef>
</Defs>
