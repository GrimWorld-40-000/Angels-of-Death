            <Synthread>50</Synthread>
        </costList>
		<statBases>
            <MaxHitPoints>270</MaxHitPoints>
            <WorkToMake>5000</WorkToMake>
            <Mass>1.5</Mass>
			<MarketValue>250</MarketValue>
            <EquipDelay>1.5</EquipDelay>
