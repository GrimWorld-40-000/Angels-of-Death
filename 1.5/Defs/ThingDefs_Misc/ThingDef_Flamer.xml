	<!--===== Flamer Base =====-->
		
	<ThingDef Abstract="True" ParentName="BaseGunWithQuality" Name="GW_SM_FlamerBase">
		<smeltable>false</smeltable>
		<techLevel>Spacer</techLevel>
		<generateCommonality>0.5</generateCommonality>
		<tradeability>None</tradeability>
		<relicChance>0</relicChance>
	</ThingDef>

	<!--===== Flamer =====-->
	
	<ThingDef ParentName="GW_SM_FlamerBase">
		<defName>GW_SM_Gun_Flamer</defName>
		<label>Infernus flamer</label>
		<description>The Infernus Flamer, used by Inferus Squads of Space Marines, is built for close combat. It projects superheated promethium, instantly incinerating enemies. Inferus Squads use these weapons in bunker assaults, urban warfare, and against swarms, maintaining relentless pressure and proving to be a formidable force.</description>
		<graphicData>
			<texPath>Things/Weapons/Ranged/Flamer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
		</graphicData>
		<tools>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>11.7</power>
				<cooldownTime>2.6</cooldownTime>
			</li>
		</tools>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
			<workSkill>Crafting</workSkill>
			<recipeUsers Inherit="False">
				<li>HP_ImperialFabricationBench</li>
			</recipeUsers>		
			<researchPrerequisite>GW_Flamers</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Plasteel>105</Plasteel>
			<Steel>125</Steel>
			<ComponentIndustrial>15</ComponentIndustrial>
			<HP_Ceramite>35</HP_Ceramite>
		</costList>
		<statBases>
			<Mass>18</Mass>
			<RangedWeapon_Cooldown>4.2</RangedWeapon_Cooldown>
			<WorkToMake>42000</WorkToMake>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.20</MoveSpeed>
		</equippedStatOffsets>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>GW_SM_Bullet_Flamer</defaultProjectile>
				<ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
				<warmupTime>1.25</warmupTime>
				<range>16</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>GW_SM_Flamer_Sound</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
	</ThingDef>
	
