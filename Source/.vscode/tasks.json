{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Mono",
            "type": "shell",
            "command": "msbuild",
            "args": ["ShieldApparel.sln"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run with Mono",
            "type": "shell",
            "command": "mono",
            "args": ["ShieldApparel.exe"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
