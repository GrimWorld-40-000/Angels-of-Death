				<defaultProjectile>GW_SM_Bullet_Flamer</defaultProjectile>
				<ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
				<warmupTime>1.4</warmupTime>
				<range>17</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>GW_SM_Flamer_Sound</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<modExtensions>
			<li Class="VEF.Things.ThingDefExtension">
				<weaponDraftedDrawOffsets>
					<north>
						<angleOffset>-60</angleOffset>
					</north>
					<east>
						<angleOffset>-60</angleOffset>
					</east>
					<south>
						<angleOffset>-60</angleOffset>
					</south>
					<west>
						<angleOffset>-60</angleOffset>
					</west>
				</weaponDraftedDrawOffsets>
			</li>
		</modExtensions>
		<tools>
			<li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
		</tools>
	</ThingDef>
	
