<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<!--===== Below This are the sounds for the Overlord weapons, and by extension, the astartes Bike =====-->

	
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>GW_Stormtalon_AssaultCannons</defName>
		<label>Assault cannons</label>
		<description>The Assault Cannon is a rotary gun designed to eliminate enemy personnel and light armor. Uses 0.998 cal bolts.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>OverlordHBolter</shotSound>
		
		<projectile>GW_Bullet_Assaultcannon</projectile>
		<reloadTimer>5</reloadTimer>
		<warmUpTimer>0.4</warmUpTimer>
		
		<magazineCapacity>400</magazineCapacity>
		<genericAmmo>true</genericAmmo>
		
		
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>2.95</rotationSpeed>
		
		<projectileOffset>1.5</projectileOffset>
		<projectileShifting>
			<li>-0.2</li>
			<li>0.2</li>
		</projectileShifting>
		
		<minRange>1</minRange>
		<maxRange>42.9</maxRange>
		
		
		
		<fireModes>
			<li>
				<shotsPerBurst>15</shotsPerBurst>
				<ticksBetweenShots>0.5</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<accuracyTouch>1</accuracyTouch>
				<accuracyShort>0.95</accuracyShort>
				<accuracyMedium>0.75</accuracyMedium>
				<accuracyLong>0.65</accuracyLong>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>50</shotsPerBurst>
				<ticksBetweenShots>0.5</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<accuracyTouch>0.85</accuracyTouch>
				<accuracyShort>0.75</accuracyShort>
				<accuracyMedium>0.65</accuracyMedium>
				<accuracyLong>0.55</accuracyLong>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>100</shotsPerBurst>
				<ticksBetweenShots>0.5</ticksBetweenShots>
				<ticksBetweenBursts>45</ticksBetweenBursts>
				<accuracyTouch>0.70</accuracyTouch>
				<accuracyShort>0.60</accuracyShort>
				<accuracyMedium>0.50</accuracyMedium>
				<accuracyLong>0.35</accuracyLong>
				<label>Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>

		<graphicData>
			<texPath>Things/Vehicles/Stormtalon/Stormtalon_TwinAssaultCannons</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>GW_HeavyBolterNonCE</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>

	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
			<defName>GW_StormTalon_Bolter</defName>
			<label>Bolter</label>
			<description>The Stormtalon’s twin-linked bolters are ideal for mowing down infantry and light vehicles with a storm of high-velocity rounds. Uses 0.998 cal bolts.</description>
			<turretType>Static</turretType>

			<shotSound>OverlordHBolter</shotSound>

			<projectile>GW_Bullet_HeavyBolter</projectile>

			<reloadTimer>7.8</reloadTimer>
			<warmUpTimer>1.0</warmUpTimer>

			<magazineCapacity>100</magazineCapacity>
			<chargePerAmmoCount>1</chargePerAmmoCount>
			<genericAmmo>true</genericAmmo>

			

			<autoSnapTargeting>false</autoSnapTargeting>

			<projectileOffset>0</projectileOffset>

			<maxRange>28.9</maxRange>

			<attachProjectileFlag>GW_Tank</attachProjectileFlag>

			<fireModes>
			<li>
				<shotsPerBurst>5</shotsPerBurst>
				<ticksBetweenShots>5</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<accuracyTouch>0.95</accuracyTouch>
				<accuracyShort>0.95</accuracyShort>
				<accuracyMedium>0.75</accuracyMedium>
				<accuracyLong>0.65</accuracyLong>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>10</shotsPerBurst>
				<ticksBetweenShots>5</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<accuracyTouch>0.85</accuracyTouch>
				<accuracyShort>0.75</accuracyShort>
				<accuracyMedium>0.65</accuracyMedium>
				<accuracyLong>0.55</accuracyLong>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>25</shotsPerBurst>
				<ticksBetweenShots>5</ticksBetweenShots>
				<ticksBetweenBursts>45</ticksBetweenBursts>
				<accuracyTouch>0.70</accuracyTouch>
				<accuracyShort>0.60</accuracyShort>
				<accuracyMedium>0.50</accuracyMedium>
				<accuracyLong>0.35</accuracyLong>
				<label>Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
			</fireModes>

		<graphicData>
			<texPath>Things/Vehicles/Stormtalon/Stormtalon_MountedBolter</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(1, 1)</drawSize>
		</graphicData>

		<ammunition>
			<thingDefs>
				<li>GW_HeavyBolterNonCE</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>

		<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
			<defName>GW_Stormtalon_lascannon</defName>
			<label>Lascannon</label>
			<description>The Stormtalon’s twin-linked lascannons are powerful, precision energy weapons mounted side-by-side, designed to pierce heavy armor and demolish fortified targets. Uses lascannon batteries.</description>
			<turretType>Static</turretType>

			<shotSound>OverlordHBolter</shotSound>

			<projectile>GW_LascanonShot</projectile>

